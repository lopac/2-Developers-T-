@model IndirectlyApp.Models.Mosaic
<div class="container col-md-4 col-md-offset-4" style="outline:1px solid green">
    <div class="row">
        @*Username*@
        <div class="col-md-6">Username</div>
        @*DatePosted*@
        <div class="col-md-2 col-md-offset-4">4d</div>
    </div>
    <div class="row">
        <div class="col-md-12">Slika</div>
    </div>

    @*Likes*@

    <div class="row">
        <div class="col-md-12">
            <strong>15 likes</strong>
        </div>
    </div>

    @*Comments*@
    <div class="row">
        <div class="col-md-12">
            @foreach (var comment in Model.Comments)
            {
                <strong>@comment.User.UserName</strong>
                @comment.Body
                <br/>
            }

        </div>
    </div>

    @using (Html.BeginForm("Create", "Mosaic", FormMethod.Post))
    {
        @Html.Hidden("id", Model.Id)
        <p>
            <input type="submit" value="Like" />
        </p>
    } 
    <div class="row">
        <div class="col-md-12">
            <strong>15 likes</strong>
        </div>
    </div>

</div>
